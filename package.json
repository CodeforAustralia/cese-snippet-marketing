{
  "private": true,
  "name": "snippet-marketing",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "preact watch --template src/template.html --no-prerender",
    "start": "if-env NODE_ENV=production && yarn -s serve || yarn -s dev",
    "build": "preact build --template src/template.html --prerenderUrls ./prerender-urls.json",
    "serve": "preact build --service-worker false && preact serve",
    "lint": "eslint src",
    "predeploy": "NODE_ENV=production yarn build",
    "deploy": "firebase deploy",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@storybook/react": "^3.4.8",
    "autoprefixer": "^8.6.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-config-synacor": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "firebase-tools": "^3.19.1",
    "if-env": "^1.0.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "preact-cli": "^2.0.0",
    "proxy-loader": "^0.1.0",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "gef": "https://bitbucket.org/dec-ce/gef.git",
    "preact": "^8.2.1",
    "preact-compat": "^3.18.0",
    "preact-router": "^2.6.1",
    "reactstrap": "^6.2.0",
    "uikit": "^3.0.0-rc.6"
  }
}
